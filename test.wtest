test "El paquete est치 pago pero no se puede llevar porque se supera el peso del puente"{
    paquete.estaPago(true)
    saraConnor.pesoPropio(70)
    saraConnor.vehiculo(camion)
    camion.acoplados(1)
    assert.notThat(paquete.puedeSerEntregado(puenteBrooklyn, saraConnor))
}

test "El paquete est치 pago y puede llevarse por Sara Connor en moto"{
    paquete.estaPago(true)
    saraConnor.pesoPropio(70)
    saraConnor.vehiculo(moto)
    assert.that(paquete.puedeSerEntregado(puenteBrooklyn, saraConnor))
}
